{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "sourceMap": true,
    "removeComments": true,
    "allowJs": true,
    "allowUnreachableCode": false,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "lib": ["es2017", "dom"]
  },
  "exclude": ["node_modules", "dist", "server.js", "webpack.config.js"]
}